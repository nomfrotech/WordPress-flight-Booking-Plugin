{
  "name": "nomfro/wordpress-flight-booking-plugin",
  "description": "Commercial-grade WordPress flight booking engine powered by Duffel API",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.11",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "WFBP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WFBP\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
